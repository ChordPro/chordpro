// Configuration for example: Molly Malone.
{
    // Layout definitions for PDF output.

    "pdf" : {

	// Slightly larger diagrams.
	"diagrams" : {
	    "width"    :  8,
  	    "height"   :  8,
	    "hspace"   :  3.95,
	    "vspace"   :  3,
  	    "vcells"   :  4,
	    "linewidth" : 0.1,
	},

	// A {titles: left} may conflict with customized formats.
	// Set to non-zero to ignore the directive.
	"titles-directive-ignore" : true,

	// Formats.
	"formats" : {
	    // Titles/Footers.
	    // The first page of a song has:
	    "title" : {
	        // Title and subtitle.
	    	"title"     : [ "%{title}", "", "" ],
	    	"subtitle"  : [ "%{subtitle|%{}|%{subtitle}}", "", "" ],
	    },
	},

	// Fonts.

	"fonts" : {
	    "title" : {
		"name" : "Helvetica-Bold",
	    },
	    "text" : {
		"name" : "Helvetica",
	    },
	    "chord" : {
		"name" : "Helvetica-Bold",
		"size" : 12
	    },
	    "comment" : {
		"name" : "Helvetica",
		"size" : 12
	    },
	},
    },
}
