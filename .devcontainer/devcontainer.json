{
	"name": "Perl Chordpro-Dev-Environment",
	"build": {
		"dockerfile": "Dockerfile",
		// Update VARIANT to pick a Perl version
		"args": { "VARIANT": "5" }
	},
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
	"workspaceMount": "source=${localWorkspaceFolder}/../chordpro,target=/workspace,type=bind,consistency=cached",
	"workspaceFolder": "/workspace",
	// Set *default* container specific settings.json values on container create.
	"settings": {},
	"mounts": [
		"source=${localWorkspaceFolder}/../chordpro,target=/data,type=bind,consistency=cached"
	  ],
	"remoteEnv": {
    	"PERL5LIB": "/workspace/lib", // Set chordpro lib dir
  	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"mortenhenriksen.perl-debug",
		"d9705996.perl-toolbox",
		"sfodje.perltidy",
		"richterger.perl"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	//"postCreateCommand": "echo 'export PERL5LIB=/workspace/chordpro/lib' >> ~/.zshrc && echo 'export PERL5LIB=/workspace/chordpro/lib' >> ~/.bashrc",
	
	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",

	"features": {
		"github-cli": "latest"
	}
}
